# StreamSense Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=prod

# Cloud Configuration
CLOUD_PROVIDER=both  # aws, gcp, or both

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012
EKS_CLUSTER_NAME=streamsense-prod

# GCP Configuration
GOOGLE_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GKE_CLUSTER_NAME=streamsense-prod

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# Database Configuration
POSTGRES_PASSWORD=your-secure-password
REDIS_PASSWORD=your-redis-password
CASSANDRA_PASSWORD=your-cassandra-password

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Monitoring Configuration
PROMETHEUS_RETENTION=30d
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Application Configuration
API_GATEWAY_PORT=8080
EUREKA_PORT=8761
CHAT_SERVICE_PORT=8081
SENTIMENT_SERVICE_PORT=8082
VIDEO_SERVICE_PORT=8083
GRAPHQL_SERVICE_PORT=8084
RECOMMENDATION_SERVICE_PORT=8085
ML_ENGINE_PORT=5000
CONFIG_SERVER_PORT=8888
ZIPKIN_PORT=9411

# Load Testing Configuration
LOAD_TEST_TARGET_RPS=10000
LOAD_TEST_DURATION=60

# Helm Configuration
HELM_TIMEOUT=600s

# SSL Configuration
SSL_ENABLED=true
CERT_MANAGER_EMAIL=admin@yourdomain.com

# Domain Configuration
DOMAIN_NAME=yourdomain.com
API_SUBDOMAIN=api
MONITORING_SUBDOMAIN=monitoring

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=streamsense-backups

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Performance Configuration
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60
WRITE_TIMEOUT=60

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_CHAT=chat-events
KAFKA_TOPIC_SENTIMENT=sentiment-events
KAFKA_TOPIC_VIDEO=video-events

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=streamsense
POSTGRES_USER=streamsense

# Cassandra Configuration
CASSANDRA_HOST=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=streamsense

# ML Configuration
ML_MODEL_CACHE_SIZE=1000
ML_BATCH_SIZE=32
ML_TIMEOUT=30

# Video Processing Configuration
VIDEO_FRAME_RATE=30
VIDEO_QUALITY=720p
VIDEO_CODEC=h264

# Chat Configuration
CHAT_MESSAGE_LIMIT=1000
CHAT_RATE_LIMIT=100
CHAT_HISTORY_RETENTION=7d

# GraphQL Configuration
GRAPHQL_PLAYGROUND_ENABLED=false
GRAPHQL_INTROSPECTION_ENABLED=false
GRAPHQL_QUERY_DEPTH_LIMIT=10

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@yourdomain.com

# Development Configuration (dev/staging only)
DEBUG_ENABLED=false
HOT_RELOAD_ENABLED=false
MOCK_EXTERNAL_SERVICES=false

# Resource Limits
CPU_LIMIT=2
MEMORY_LIMIT=4Gi
STORAGE_LIMIT=100Gi

# Auto-scaling Configuration
HPA_MIN_REPLICAS=2
HPA_MAX_REPLICAS=10
HPA_CPU_THRESHOLD=70
HPA_MEMORY_THRESHOLD=80

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60s
CIRCUIT_BREAKER_RESET_TIMEOUT=30s